<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".menu.PantallaPrincipal">


    <Button
        android:id="@+id/button3"
        android:layout_width="201dp"
        android:layout_height="62dp"

        android:layout_marginBottom="20dp"

        android:text="@string/gesti_n_de_puntos"
        app:backgroundTint="#DD0C36"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="257dp"
        android:layout_height="98dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/escudo_utpl" />

    <Button
        android:id="@+id/button2"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_marginBottom="44dp"
        android:text="@string/modo_mapa"

        android:textStyle="bold"
        app:backgroundTint="#2196F3"
        app:icon="@drawable/poi15_100px"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="240dp"
        android:layout_height="120dp"

        android:layout_marginBottom="32dp"
        android:text="@string/realidad_aumentada"
        android:textColor="#000000"
        android:textStyle="bold"
        app:backgroundTint="#FFC107"
        app:icon="@drawable/poi4_100px"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="32dp"
        android:text="UNIVERSIDAD TÉCNICA PARTICULAR DE LOJA"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="386dp"
        android:layout_height="85dp"
        android:layout_marginBottom="36dp"
        android:text="Aplicación de realidad aumentada basada en geolocalización, para visualizar la descripción de lugares específicos dentro del campo de la Universidad Técnica Particular de Loja."
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="nrpaltin@utpl.edu.ec"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>